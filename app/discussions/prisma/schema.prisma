generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DISCUSSIONS_DATABASE_URL")
}

enum Topic {
  Career
  Compensation
  Feedback
  Interview
}

model Discussions {
  id Int @id @default(autoincrement())
  userId String
  topic Topic @default(Career)
  title String
  content String

  comments Comments[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Comments {
  id Int @id @default(autoincrement())
  discussionsId Int
  userId String
  content String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  discussions Discussions @relation(fields: [discussionsId], references: [id])
}