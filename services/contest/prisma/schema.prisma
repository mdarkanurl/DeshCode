generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SubmitStatus {
  PENDING
  ACCEPTED
  WRONG_ANSWER
  EXECUTION_ERROR
  TIME_OUT
  FAILED
  INTERNAL_ERROR
  INVALID_FUNCTION_SIGNATURE
  LANGUAGE_NOT_SUPPORTED
}

model Contest {
  id          String   @id @default(cuid())
  name        String
  description String?
  rules       String?
  problemIds   String[]
  startTime   DateTime
  endTime     DateTime

  participants Participant[]
  submit SubmitData[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SubmitData {
  id    Int @id @default(autoincrement())
  contestId String
  Contest Contest @relation(fields: [contestId], references: [id])
  submitId Int
  submitStatus SubmitStatus
  userId String
}

model Participant {
  id        String  @id @default(cuid())
  contestId String
  userId    String

  contest   Contest  @relation(fields: [contestId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}